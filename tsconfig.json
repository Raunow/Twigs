{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": false,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "removeComments": true,
        "importHelpers": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "importsNotUsedAsValues": "remove",
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}